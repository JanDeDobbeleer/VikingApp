<UserControl x:Class="UpdateLiveTile.Control.FrontTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">
    
    <Grid x:Name="LayoutRoot">
        <Image x:Name="Image" Source="/Assets/336x336.png" Width="290" HorizontalAlignment="Left" Margin="-30,-30,0,0"/>
        <TextBlock x:Name="Days" Margin="0,-138,45,0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="90" FontWeight="SemiBold"/>
        <TextBlock Text="days" Margin="0,-25,50,0" FontSize="45"  FontWeight="Medium" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Text="left" Margin="0,85,50,0" FontSize="62" FontWeight="Medium" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</UserControl>