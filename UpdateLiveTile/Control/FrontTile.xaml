<UserControl x:Class="UpdateLiveTile.Control.FrontTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">
    
    <Grid x:Name="LayoutRoot">
        <Image Source="/Assets/logo.png" Width="250" HorizontalAlignment="Left"/>
        <TextBlock x:Name="Days" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,60,0" FontSize="70"/>
    </Grid>
</UserControl>