<UserControl x:Class="UpdateLiveTile.Control.FrontTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Background="{StaticResource TransparentBrush}"
    d:DesignHeight="336" d:DesignWidth="336">

    <Grid x:Name="LayoutRoot" Background="{StaticResource TransparentBrush}">
        <Image x:Name="Image" Margin="-52,0,0,0" Source="/Assets/336x336.png" Width="320" HorizontalAlignment="Left" />
        <TextBlock x:Name="Days" FontSize="98" Margin="0,-121,35,0" HorizontalAlignment="Right" VerticalAlignment="Center"  FontWeight="SemiBold"/>
        <TextBlock x:Name="DaysBlock" Text="days" Margin="0,5,38,0" FontSize="51"  FontWeight="Medium" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Text="left" Margin="0,126,39,0" FontSize="70" FontWeight="Medium" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</UserControl>